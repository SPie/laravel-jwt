{
    "name": "spie/laravel-jwt",
    "description": "JWT package for Laravel and Lumen.",
    "keywords": ["laravel", "lumen", "jwt", "authentication"],
    "license": "MIT",
    "type": "library",
    "require": {
        "php": ">=7.4.0",
        "lcobucci/jwt": "^3.2",
        "illuminate/auth": "^7.0 || ^8.0",
        "illuminate/config": "^7.0 || ^8.0",
        "illuminate/console": "^7.0 || ^8.0",
        "illuminate/contracts": "^7.0 || ^8.0",
        "illuminate/support": "^7.0 || ^8.0",
        "illuminate/cache": "^7.0 || ^8.0",
        "vlucas/phpdotenv": "^4.0 || ^5.2"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0",
        "fzaninotto/faker": "^1.8",
        "mockery/mockery": "^1.2",
        "php-coveralls/php-coveralls": "^2.1"
    },
    "autoload": {
        "psr-4": {
            "SPie\\LaravelJWT\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "SPie\\LaravelJWT\\Test\\": "tests"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "optimize-autoloader": true
    }
}
